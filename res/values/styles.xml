<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="CustomActivityThemeNoActionBar" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

    <!-- App custom styles -->
    <style name="ActivityBaseBackground">
        <item name="android:background">@color/custom_grey_1</item>
    </style>

    <style name="GridImage">
        <item name="android:layout_width">88dp</item>
        <item name="android:layout_height">88dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@color/custom_grey_1</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="RadioButtonCustom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/radio_btn_background</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@drawable/radio_btn_textcolor</item>
    </style>

    <style name="BtnGreen">
        <item name="android:background">@drawable/btn_green</item>
        <item name="android:textColor">@drawable/btn_green_textcolor</item>
    </style>

</resources>