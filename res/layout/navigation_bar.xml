<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_height_60"
    android:background="@color/custom_green_1"
    android:orientation="vertical" >

    <ImageButton
        android:id="@+id/img_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/padding_left_30"
        android:background="@drawable/img_btn_back_arrow"
        android:onClick="onBack" />

    <TextView
        android:id="@+id/txt_view_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="#myalbum1234"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="@dimen/margin_right_15"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/img_btn_nav_bar_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/img_invite_frnd"
            android:onClick="onRightImgBtnClick" />

        <Button
            android:id="@+id/btn_nav_bar_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:onClick="onRightBtnClick"
            android:visibility="gone"
            android:text="Invite" />
    </FrameLayout>

</FrameLayout>